# CosmosDB Configuration
AZURE_COSMOSDB_URI="https://your-cosmos-account.documents.azure.com:443/"
AZURE_COSMOSDB_KEY="your-cosmos-primary-or-secondary-key"

# Banking Database Configuration
BANKING_DATABASE_NAME="BankingDB"

# Banking Container Names (configurable)
AZURE_COSMOSDB_ACCOUNT_CONTAINER="accounts"
AZURE_COSMOSDB_PAYMENT_METHOD_CONTAINER="payment-methods"
AZURE_COSMOSDB_BENEFICIARY_CONTAINER="beneficiaries"
AZURE_COSMOSDB_TRANSACTION_CONTAINER="transactions"

# Banking Partition Keys (documentation only - set when creating containers)
AZURE_COSMOSDB_ACCOUNT_CONTAINER_PARTITION_KEY="/userName"
AZURE_COSMOSDB_PAYMENT_METHOD_CONTAINER_PARTITION_KEY="/accountId"
AZURE_COSMOSDB_BENEFICIARY_CONTAINER_PARTITION_KEY="/accountId"
AZURE_COSMOSDB_TRANSACTION_CONTAINER_PARTITION_KEY="/accountId"

# Industrial Database Configuration
INDUSTRIAL_DATABASE_NAME="IndustrialDB"

# Inventory API Container Names (configurable)
AZURE_COSMOSDB_INVENTORY_CONTAINER="inventory-items"
AZURE_COSMOSDB_RESERVATIONS_CONTAINER="reservations"

# Inventory API Partition Keys (documentation only - set when creating containers)
AZURE_COSMOSDB_INVENTORY_CONTAINER_PARTITION_KEY="/category"
AZURE_COSMOSDB_RESERVATIONS_CONTAINER_PARTITION_KEY="/item_id"

# Maintenance API Container Names (configurable)
AZURE_COSMOSDB_TECHNICIANS_CONTAINER="technicians"
AZURE_COSMOSDB_JOBS_CONTAINER="maintenance-jobs"
AZURE_COSMOSDB_SCHEDULE_CONTAINER="schedule-slots"

# Maintenance API Partition Keys (documentation only - set when creating containers)
AZURE_COSMOSDB_TECHNICIANS_CONTAINER_PARTITION_KEY="/technician_id"
AZURE_COSMOSDB_JOBS_CONTAINER_PARTITION_KEY="/job_id"
AZURE_COSMOSDB_SCHEDULE_CONTAINER_PARTITION_KEY="/technician_id"

# RBAC Authentication (for production deployment with Managed Identity or Service Principal)
# Uncomment and set these when deploying to Azure container:
# AZURE_CLIENT_ID=<your-managed-identity-client-id>
# AZURE_TENANT_ID=<your-tenant-id>
# AZURE_CLIENT_SECRET=<your-service-principal-secret>  # Only if using Service Principal

# API Configuration (optional)
# TRANSACTIONS_API_URL="http://localhost:8081"
