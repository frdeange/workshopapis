{
  "openapi": "3.0.1",
  "info": {
    "title": "Inventory API",
    "description": "Industrial Inventory Management API - Manages inventory items, stock levels, categories, and reservations for industrial equipment and materials.",
    "version": "1.0.0",
    "contact": {
      "name": "API Support",
      "email": "support@workshoptools.com"
    }
  },
  "servers": [
    {
      "url": "https://workshoptools-apimfrdeange.azure-api.net/inventoryapi",
      "description": "Azure API Management - Production"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Verifies that the API is running and healthy. Returns a simple status message.",
        "operationId": "get-health",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "API is healthy and operational",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    }
                  }
                },
                "example": {
                  "status": "healthy"
                }
              }
            }
          }
        }
      }
    },
    "/inventory": {
      "get": {
        "summary": "Get All Inventory Items",
        "description": "Retrieves a complete list of all inventory items across all categories with their current stock levels, locations, and pricing information.",
        "operationId": "get-all-inventory",
        "tags": ["Inventory"],
        "responses": {
          "200": {
            "description": "Successfully retrieved all inventory items",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/InventoryItem"
                  }
                },
                "examples": {
                  "multipleItems": {
                    "summary": "Sample inventory items",
                    "value": [
                      {
                        "id": "DRILL-001",
                        "name": "Pneumatic Drill",
                        "category": "tools",
                        "stock_quantity": 15,
                        "min_stock_level": 5,
                        "unit_price": 250.00,
                        "location": "Warehouse A - Shelf 12",
                        "supplier": "Industrial Tools Inc.",
                        "last_restocked": "2024-10-15T10:30:00Z"
                      },
                      {
                        "id": "STEEL-001",
                        "name": "Steel Beam 6m",
                        "category": "materials",
                        "stock_quantity": 45,
                        "min_stock_level": 20,
                        "unit_price": 180.00,
                        "location": "Warehouse B - Section 3",
                        "supplier": "Steel Suppliers Ltd.",
                        "last_restocked": "2024-10-20T14:00:00Z"
                      },
                      {
                        "id": "WELD-001",
                        "name": "Welding Electrode Pack",
                        "category": "consumables",
                        "stock_quantity": 8,
                        "min_stock_level": 15,
                        "unit_price": 45.00,
                        "location": "Storage Room C - Bin 7",
                        "supplier": "Weld-Pro Supplies",
                        "last_restocked": "2024-09-28T09:15:00Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/inventory/low-stock": {
      "get": {
        "summary": "Get Low Stock Items",
        "description": "Retrieves all inventory items where the current stock quantity is below or equal to the minimum stock level threshold. Useful for identifying items that need reordering.",
        "operationId": "get-low-stock-items",
        "tags": ["Inventory"],
        "responses": {
          "200": {
            "description": "Successfully retrieved low stock items",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/InventoryItem"
                  }
                },
                "examples": {
                  "lowStockItems": {
                    "summary": "Items requiring restock",
                    "value": [
                      {
                        "id": "WELD-001",
                        "name": "Welding Electrode Pack",
                        "category": "consumables",
                        "stock_quantity": 8,
                        "min_stock_level": 15,
                        "unit_price": 45.00,
                        "location": "Storage Room C - Bin 7",
                        "supplier": "Weld-Pro Supplies",
                        "last_restocked": "2024-09-28T09:15:00Z"
                      },
                      {
                        "id": "PUMP-001",
                        "name": "Hydraulic Pump",
                        "category": "machinery",
                        "stock_quantity": 2,
                        "min_stock_level": 3,
                        "unit_price": 850.00,
                        "location": "Warehouse A - Heavy Equipment Zone",
                        "supplier": "Hydraulics Corp.",
                        "last_restocked": "2024-08-10T11:45:00Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/inventory/category/{category}": {
      "get": {
        "summary": "Get Items by Category",
        "description": "Retrieves all inventory items belonging to a specific category. Available categories: tools, materials, consumables, machinery, safety.",
        "operationId": "get-items-by-category",
        "tags": ["Inventory"],
        "parameters": [
          {
            "name": "category",
            "in": "path",
            "required": true,
            "description": "The category name to filter by (e.g., tools, materials, consumables, machinery, safety)",
            "schema": {
              "type": "string",
              "enum": ["tools", "materials", "consumables", "machinery", "safety"]
            },
            "example": "tools"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved items in the specified category",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/InventoryItem"
                  }
                },
                "examples": {
                  "toolsCategory": {
                    "summary": "Tools category items",
                    "value": [
                      {
                        "id": "DRILL-001",
                        "name": "Pneumatic Drill",
                        "category": "tools",
                        "stock_quantity": 15,
                        "min_stock_level": 5,
                        "unit_price": 250.00,
                        "location": "Warehouse A - Shelf 12",
                        "supplier": "Industrial Tools Inc.",
                        "last_restocked": "2024-10-15T10:30:00Z"
                      },
                      {
                        "id": "SAW-001",
                        "name": "Circular Saw",
                        "category": "tools",
                        "stock_quantity": 10,
                        "min_stock_level": 4,
                        "unit_price": 320.00,
                        "location": "Warehouse A - Shelf 14",
                        "supplier": "Power Tools Direct",
                        "last_restocked": "2024-10-18T13:20:00Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/inventory/{item_id}": {
      "get": {
        "summary": "Check Stock for Specific Item",
        "description": "Retrieves detailed stock information for a specific inventory item by its ID, including availability status and quantity.",
        "operationId": "get-check-stock",
        "tags": ["Inventory"],
        "parameters": [
          {
            "name": "item_id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the inventory item",
            "schema": {
              "type": "string"
            },
            "example": "DRILL-001"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved stock information",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StockCheckResponse"
                },
                "examples": {
                  "inStock": {
                    "summary": "Item in stock",
                    "value": {
                      "item_id": "DRILL-001",
                      "name": "Pneumatic Drill",
                      "available": true,
                      "quantity": 15,
                      "location": "Warehouse A - Shelf 12"
                    }
                  },
                  "lowStock": {
                    "summary": "Item with low stock",
                    "value": {
                      "item_id": "WELD-001",
                      "name": "Welding Electrode Pack",
                      "available": true,
                      "quantity": 8,
                      "location": "Storage Room C - Bin 7"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Item not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Item not found"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/inventory/reserve": {
      "post": {
        "summary": "Reserve Items",
        "description": "Creates a reservation for one or more inventory items with specified quantities. Returns a reservation ID that can be used to track the reservation status.",
        "operationId": "post-reserve-items",
        "tags": ["Reservations"],
        "requestBody": {
          "required": true,
          "description": "Reservation details including item ID, quantity, and requester information",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReservationRequest"
              },
              "examples": {
                "singleItemReservation": {
                  "summary": "Reserve a single item",
                  "value": {
                    "item_id": "DRILL-001",
                    "quantity": 3,
                    "requested_by": "John Smith",
                    "purpose": "Construction Project Alpha",
                    "expected_return_date": "2024-11-15"
                  }
                },
                "multipleItemReservation": {
                  "summary": "Reserve multiple units",
                  "value": {
                    "item_id": "STEEL-001",
                    "quantity": 10,
                    "requested_by": "Maria Garcia",
                    "purpose": "Building Extension Phase 2",
                    "expected_return_date": "2024-12-01"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Reservation created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                },
                "examples": {
                  "successfulReservation": {
                    "summary": "Successful reservation",
                    "value": {
                      "reservation_id": "RES-20241102-001",
                      "item_id": "DRILL-001",
                      "item_name": "Pneumatic Drill",
                      "quantity_reserved": 3,
                      "status": "confirmed",
                      "created_at": "2024-11-02T21:50:00Z",
                      "requested_by": "John Smith",
                      "purpose": "Construction Project Alpha",
                      "expected_return_date": "2024-11-15"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request or insufficient stock",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "examples": {
                  "insufficientStock": {
                    "summary": "Not enough stock",
                    "value": {
                      "error": "Insufficient stock. Available: 2, Requested: 5"
                    }
                  },
                  "invalidQuantity": {
                    "summary": "Invalid quantity",
                    "value": {
                      "error": "Quantity must be a positive integer"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Item not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Item not found"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/reservations": {
      "get": {
        "summary": "Get All Reservations",
        "description": "Retrieves a list of all item reservations in the system, including active, completed, and cancelled reservations.",
        "operationId": "get-all-reservations",
        "tags": ["Reservations"],
        "responses": {
          "200": {
            "description": "Successfully retrieved all reservations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReservationResponse"
                  }
                },
                "examples": {
                  "multipleReservations": {
                    "summary": "Sample reservations",
                    "value": [
                      {
                        "reservation_id": "RES-20241028-001",
                        "item_id": "DRILL-001",
                        "item_name": "Pneumatic Drill",
                        "quantity_reserved": 2,
                        "status": "confirmed",
                        "created_at": "2024-10-28T09:30:00Z",
                        "requested_by": "Carlos Mendez",
                        "purpose": "Facility Maintenance",
                        "expected_return_date": "2024-11-05"
                      },
                      {
                        "reservation_id": "RES-20241030-002",
                        "item_id": "STEEL-001",
                        "item_name": "Steel Beam 6m",
                        "quantity_reserved": 15,
                        "status": "active",
                        "created_at": "2024-10-30T14:15:00Z",
                        "requested_by": "Anna Kowalski",
                        "purpose": "Bridge Repair Project",
                        "expected_return_date": "2024-11-20"
                      },
                      {
                        "reservation_id": "RES-20241101-003",
                        "item_id": "WELD-001",
                        "item_name": "Welding Electrode Pack",
                        "quantity_reserved": 5,
                        "status": "completed",
                        "created_at": "2024-11-01T11:00:00Z",
                        "requested_by": "Michael Brown",
                        "purpose": "Equipment Assembly",
                        "expected_return_date": "2024-11-02",
                        "completed_at": "2024-11-02T16:30:00Z"
                      }
                    ]
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/reservations/{reservation_id}": {
      "get": {
        "summary": "Get Specific Reservation",
        "description": "Retrieves detailed information about a specific reservation by its ID.",
        "operationId": "get-reservation",
        "tags": ["Reservations"],
        "parameters": [
          {
            "name": "reservation_id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the reservation",
            "schema": {
              "type": "string"
            },
            "example": "RES-20241028-001"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully retrieved reservation details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationResponse"
                },
                "examples": {
                  "activeReservation": {
                    "summary": "Active reservation",
                    "value": {
                      "reservation_id": "RES-20241028-001",
                      "item_id": "DRILL-001",
                      "item_name": "Pneumatic Drill",
                      "quantity_reserved": 2,
                      "status": "confirmed",
                      "created_at": "2024-10-28T09:30:00Z",
                      "requested_by": "Carlos Mendez",
                      "purpose": "Facility Maintenance",
                      "expected_return_date": "2024-11-05"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Reservation not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Reservation not found"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "InventoryItem": {
        "type": "object",
        "required": ["id", "name", "category", "stock_quantity", "min_stock_level", "unit_price"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the inventory item",
            "example": "DRILL-001"
          },
          "name": {
            "type": "string",
            "description": "Name of the inventory item",
            "example": "Pneumatic Drill"
          },
          "category": {
            "type": "string",
            "description": "Category classification of the item",
            "enum": ["tools", "materials", "consumables", "machinery", "safety"],
            "example": "tools"
          },
          "stock_quantity": {
            "type": "integer",
            "description": "Current quantity in stock",
            "minimum": 0,
            "example": 15
          },
          "min_stock_level": {
            "type": "integer",
            "description": "Minimum stock level threshold for reordering",
            "minimum": 0,
            "example": 5
          },
          "unit_price": {
            "type": "number",
            "format": "float",
            "description": "Price per unit in USD",
            "minimum": 0,
            "example": 250.00
          },
          "location": {
            "type": "string",
            "description": "Physical storage location",
            "example": "Warehouse A - Shelf 12"
          },
          "supplier": {
            "type": "string",
            "description": "Name of the supplier",
            "example": "Industrial Tools Inc."
          },
          "last_restocked": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of the last restock operation",
            "example": "2024-10-15T10:30:00Z"
          }
        }
      },
      "StockCheckResponse": {
        "type": "object",
        "required": ["item_id", "name", "available", "quantity"],
        "properties": {
          "item_id": {
            "type": "string",
            "description": "Unique identifier of the item",
            "example": "DRILL-001"
          },
          "name": {
            "type": "string",
            "description": "Name of the item",
            "example": "Pneumatic Drill"
          },
          "available": {
            "type": "boolean",
            "description": "Whether the item is currently available",
            "example": true
          },
          "quantity": {
            "type": "integer",
            "description": "Current stock quantity",
            "example": 15
          },
          "location": {
            "type": "string",
            "description": "Storage location",
            "example": "Warehouse A - Shelf 12"
          }
        }
      },
      "ReservationRequest": {
        "type": "object",
        "required": ["item_id", "quantity", "requested_by"],
        "properties": {
          "item_id": {
            "type": "string",
            "description": "ID of the item to reserve",
            "example": "DRILL-001"
          },
          "quantity": {
            "type": "integer",
            "description": "Number of units to reserve",
            "minimum": 1,
            "example": 3
          },
          "requested_by": {
            "type": "string",
            "description": "Name or ID of the person making the reservation",
            "example": "John Smith"
          },
          "purpose": {
            "type": "string",
            "description": "Purpose or reason for the reservation",
            "example": "Construction Project Alpha"
          },
          "expected_return_date": {
            "type": "string",
            "format": "date",
            "description": "Expected date when items will be returned",
            "example": "2024-11-15"
          }
        }
      },
      "ReservationResponse": {
        "type": "object",
        "required": ["reservation_id", "item_id", "quantity_reserved", "status", "created_at"],
        "properties": {
          "reservation_id": {
            "type": "string",
            "description": "Unique identifier for the reservation",
            "example": "RES-20241102-001"
          },
          "item_id": {
            "type": "string",
            "description": "ID of the reserved item",
            "example": "DRILL-001"
          },
          "item_name": {
            "type": "string",
            "description": "Name of the reserved item",
            "example": "Pneumatic Drill"
          },
          "quantity_reserved": {
            "type": "integer",
            "description": "Number of units reserved",
            "example": 3
          },
          "status": {
            "type": "string",
            "description": "Current status of the reservation",
            "enum": ["confirmed", "active", "completed", "cancelled"],
            "example": "confirmed"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when reservation was created",
            "example": "2024-11-02T21:50:00Z"
          },
          "requested_by": {
            "type": "string",
            "description": "Person who made the reservation",
            "example": "John Smith"
          },
          "purpose": {
            "type": "string",
            "description": "Purpose of the reservation",
            "example": "Construction Project Alpha"
          },
          "expected_return_date": {
            "type": "string",
            "format": "date",
            "description": "Expected return date",
            "example": "2024-11-15"
          },
          "completed_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when reservation was completed (if applicable)",
            "example": "2024-11-15T16:30:00Z"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message describing what went wrong",
            "example": "Item not found"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKeyHeader": {
        "type": "apiKey",
        "name": "Ocp-Apim-Subscription-Key",
        "in": "header",
        "description": "API subscription key for authentication via header"
      },
      "apiKeyQuery": {
        "type": "apiKey",
        "name": "subscription-key",
        "in": "query",
        "description": "API subscription key for authentication via query parameter"
      }
    }
  },
  "security": [
    {
      "apiKeyHeader": []
    },
    {
      "apiKeyQuery": []
    }
  ],
  "tags": [
    {
      "name": "Health",
      "description": "API health check endpoints"
    },
    {
      "name": "Inventory",
      "description": "Inventory item management and queries"
    },
    {
      "name": "Reservations",
      "description": "Item reservation management"
    }
  ]
}
