  "components": {
    "schemas": {
      "Technician": {
        "type": "object",
        "required": ["id", "technician_id", "name", "specialization", "skill_level", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Document ID (same as technician_id)",
            "example": "TECH-001"
          },
          "technician_id": {
            "type": "string",
            "description": "Unique identifier for the technician",
            "example": "TECH-001"
          },
          "name": {
            "type": "string",
            "description": "Full name of the technician",
            "example": "John Smith"
          },
          "specialization": {
            "type": "array",
            "description": "List of technical specializations",
            "items": {
              "type": "string"
            },
            "example": ["Electrical", "HVAC"]
          },
          "skill_level": {
            "type": "string",
            "description": "Skill level of the technician",
            "enum": ["Junior", "Senior", "Expert"],
            "example": "Senior"
          },
          "status": {
            "type": "string",
            "description": "Current availability status",
            "enum": ["available", "busy", "off_duty"],
            "example": "available"
          },
          "current_location": {
            "type": "string",
            "description": "Current work location of the technician",
            "example": "Factory Floor A"
          },
          "contact_phone": {
            "type": "string",
            "description": "Contact phone number",
            "example": "+1-555-0123"
          }
        }
      },
      "MaintenanceJob": {
        "type": "object",
        "required": ["id", "job_id", "machine_id", "description", "priority", "status"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Document ID (same as job_id)",
            "example": "JOB-20231015-001"
          },
          "job_id": {
            "type": "string",
            "description": "Unique identifier for the maintenance job",
            "example": "JOB-20231015-001"
          },
          "machine_id": {
            "type": "string",
            "description": "Identifier of the machine requiring maintenance",
            "example": "MACHINE-105"
          },
          "error_code": {
            "type": "string",
            "nullable": true,
            "description": "Error code if applicable (null for preventive maintenance)",
            "example": "ERR-OVERHEAT-42"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the maintenance work required",
            "example": "Motor overheating, requires inspection and bearing replacement"
          },
          "priority": {
            "type": "string",
            "description": "Priority level of the maintenance job",
            "enum": ["low", "medium", "high", "critical"],
            "example": "high"
          },
          "estimated_duration_hours": {
            "type": "number",
            "format": "float",
            "description": "Estimated time to complete the job in hours",
            "example": 3.5
          },
          "assigned_technician_id": {
            "type": "string",
            "description": "ID of the assigned technician",
            "example": "TECH-001"
          },
          "scheduled_date": {
            "type": "string",
            "format": "date",
            "description": "Scheduled date for the maintenance",
            "example": "2023-10-20"
          },
          "scheduled_time": {
            "type": "string",
            "description": "Scheduled time (HH:MM format)",
            "example": "09:00"
          },
          "status": {
            "type": "string",
            "description": "Current status of the job",
            "enum": ["scheduled", "in_progress", "completed", "cancelled"],
            "example": "scheduled"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the job was created",
            "example": "2023-10-15T14:30:00.000000"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes or comments about the job",
            "example": "Requested by: Plant Manager. Customer reported unusual noise."
          }
        }
      },
      "ScheduleSlot": {
        "type": "object",
        "required": ["id", "slot_id", "technician_id", "date", "start_time", "end_time", "available"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Document ID (same as slot_id)",
            "example": "SLOT-20231020-001"
          },
          "slot_id": {
            "type": "string",
            "description": "Unique identifier for the schedule slot",
            "example": "SLOT-20231020-001"
          },
          "technician_id": {
            "type": "string",
            "description": "ID of the technician this slot belongs to",
            "example": "TECH-001"
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date of the schedule slot",
            "example": "2023-10-20"
          },
          "start_time": {
            "type": "string",
            "description": "Start time of the slot (HH:MM format)",
            "example": "09:00"
          },
          "end_time": {
            "type": "string",
            "description": "End time of the slot (HH:MM format)",
            "example": "17:00"
          },
          "available": {
            "type": "boolean",
            "description": "Whether the slot is available for booking",
            "example": true
          },
          "location": {
            "type": "string",
            "description": "Work location for this time slot",
            "example": "Factory Floor A"
          }
        }
      },
      "JobStatusUpdate": {
        "type": "object",
        "required": ["status"],
        "properties": {
          "status": {
            "type": "string",
            "description": "New status for the job",
            "enum": ["scheduled", "in_progress", "completed", "cancelled"],
            "example": "in_progress"
          }
        }
      },
      "JobBookingRequest": {
        "type": "object",
        "required": ["machine_id", "description", "priority", "estimated_duration_hours"],
        "properties": {
          "machine_id": {
            "type": "string",
            "description": "ID of the machine requiring maintenance",
            "example": "MACHINE-208"
          },
          "error_code": {
            "type": "string",
            "nullable": true,
            "description": "Error code if applicable (null for preventive maintenance)",
            "example": "ERR-PRESSURE-22"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the maintenance work needed",
            "example": "Loss of hydraulic pressure in main system"
          },
          "priority": {
            "type": "string",
            "description": "Priority level for the job",
            "enum": ["low", "medium", "high", "critical"],
            "example": "critical"
          },
          "estimated_duration_hours": {
            "type": "number",
            "format": "float",
            "description": "Estimated duration in hours",
            "minimum": 0.5,
            "example": 3.0
          },
          "requested_by": {
            "type": "string",
            "description": "Name or ID of the person requesting the maintenance",
            "example": "Production Manager"
          },
          "notes": {
            "type": "string",
            "description": "Additional notes or special instructions",
            "example": "Production line stopped. Urgent repair needed."
          }
        }
      },
      "JobBookingResponse": {
        "type": "object",
        "required": ["job_id", "machine_id", "description", "priority", "assigned_technician_id", "status"],
        "properties": {
          "job_id": {
            "type": "string",
            "description": "Unique identifier for the newly created job",
            "example": "JOB-20241102-005"
          },
          "machine_id": {
            "type": "string",
            "description": "Machine ID from the request",
            "example": "MACHINE-208"
          },
          "error_code": {
            "type": "string",
            "nullable": true,
            "description": "Error code if provided",
            "example": "ERR-PRESSURE-22"
          },
          "description": {
            "type": "string",
            "description": "Job description",
            "example": "Loss of hydraulic pressure in main system"
          },
          "priority": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"],
            "example": "critical"
          },
          "estimated_duration_hours": {
            "type": "number",
            "format": "float",
            "example": 3.0
          },
          "assigned_technician_id": {
            "type": "string",
            "description": "ID of the technician assigned to this job",
            "example": "TECH-002"
          },
          "assigned_technician_name": {
            "type": "string",
            "description": "Name of the assigned technician",
            "example": "Sarah Johnson"
          },
          "scheduled_date": {
            "type": "string",
            "format": "date",
            "description": "Date when the job is scheduled",
            "example": "2024-11-03"
          },
          "scheduled_time": {
            "type": "string",
            "description": "Time when the job is scheduled (HH:MM)",
            "example": "08:00"
          },
          "status": {
            "type": "string",
            "description": "Initial status of the job",
            "example": "scheduled"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp when the job was created",
            "example": "2024-11-02T22:15:00.000000"
          },
          "notes": {
            "type": "string",
            "description": "Combined notes including request information",
            "example": "Production line stopped. Urgent repair needed. Requested by: Production Manager"
          }
        }
      },
      "Error": {
        "type": "object",
        "required": ["error"],
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message describing what went wrong",
            "example": "Resource not found"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKeyHeader": {
        "type": "apiKey",
        "name": "Ocp-Apim-Subscription-Key",
