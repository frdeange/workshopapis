        "tags": ["Jobs"],
        "requestBody": {
          "required": true,
          "description": "Details of the maintenance job to book",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JobBookingRequest"
              },
              "examples": {
                "criticalJob": {
                  "summary": "Critical hydraulic issue",
                  "value": {
                    "machine_id": "MACHINE-208",
                    "error_code": "ERR-PRESSURE-22",
                    "description": "Loss of hydraulic pressure in main system",
                    "priority": "critical",
                    "estimated_duration_hours": 3.0,
                    "requested_by": "Production Manager",
                    "notes": "Production line stopped. Urgent repair needed."
                  }
                },
                "routineMaintenance": {
                  "summary": "Routine preventive maintenance",
                  "value": {
                    "machine_id": "MACHINE-099",
