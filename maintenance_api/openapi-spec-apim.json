    "/health": {
      "get": {
        "summary": "Health Check",
        "description": "Verifies that the Maintenance API is running and healthy. Returns a simple status message.",
        "operationId": "get-health",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "API is healthy and operational",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    }
                  }
                },
                "example": {
                  "status": "healthy"
                }
              }
            }
          }
        }
      }
    },
