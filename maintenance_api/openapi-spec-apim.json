    "/jobs/{job_id}/status": {
      "put": {
        "summary": "Update Job Status",
        "description": "Updates the status of a specific maintenance job. Used to move jobs through the workflow: scheduled → in_progress → completed, or to cancel jobs.",
        "operationId": "put-update-job-status",
        "tags": ["Jobs"],
        "parameters": [
          {
            "name": "job_id",
            "in": "path",
            "required": true,
            "description": "The unique identifier of the job to update",
            "schema": {
              "type": "string"
            },
            "example": "JOB-20231015-001"
          }
        ],
        "requestBody": {
          "required": true,
          "description": "New status for the job",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JobStatusUpdate"
              },
              "examples": {
                "startJob": {
                  "summary": "Start a scheduled job",
                  "value": {
                    "status": "in_progress"
                  }
                },
                "completeJob": {
                  "summary": "Mark job as completed",
                  "value": {
                    "status": "completed"
                  }
                },
                "cancelJob": {
                  "summary": "Cancel a job",
                  "value": {
                    "status": "cancelled"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Job status updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MaintenanceJob"
                },
                "examples": {
                  "updatedJob": {
                    "summary": "Job status updated",
                    "value": {
                      "id": "JOB-20231015-001",
                      "job_id": "JOB-20231015-001",
                      "machine_id": "MACHINE-105",
                      "error_code": "ERR-OVERHEAT-42",
                      "description": "Motor overheating, requires inspection and bearing replacement",
                      "priority": "high",
                      "estimated_duration_hours": 3.5,
                      "assigned_technician_id": "TECH-001",
                      "scheduled_date": "2023-10-20",
                      "scheduled_time": "09:00",
                      "status": "in_progress",
                      "created_at": "2023-10-15T14:30:00.000000",
                      "notes": "Requested by: Plant Manager. Customer reported unusual noise."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Invalid status. Must be one of: scheduled, in_progress, completed, cancelled"
                }
              }
            }
          },
          "404": {
            "description": "Job not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "error": "Job not found"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/jobs/book": {
      "post": {
        "summary": "Book Maintenance Job",
        "description": "Creates a new maintenance job booking with machine details, error information, priority level, and automatically assigns an available technician and schedule slot.",
